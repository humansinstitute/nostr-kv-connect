{
  "name": "nostrkv-connect",
  "version": "0.1.0",
  "description": "NIP-47-style KV over Nostr - A service that grants scoped, revocable access to Redis via encrypted Nostr DMs",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "web": "tsx src/web-server.ts",
    "test-server": "npm run build && npm run web",
    "demo": "npm run build && tsx src/demo.ts",
    "e2e-test": "npm run build && tsx scripts/run-e2e-test.ts",
    "e2e-manual": "npm run build && tsx scripts/e2e-test.ts",
    "generate-uri": "tsx scripts/generate-uri.ts",
    "generate-keys": "tsx scripts/generate-keys.ts",
    "demo-client": "tsx scripts/demo-client.ts",
    "test": "jest"
  },
  "keywords": ["nostr", "redis", "kv", "nip-47"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "nostr-tools": "^2.10.4",
    "@noble/curves": "^1.7.0",
    "@noble/ciphers": "^1.1.3",
    "ioredis": "^5.4.2",
    "uuid": "^11.0.6",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.1",
    "rate-limiter-flexible": "^5.0.4",
    "zod": "^3.24.1",
    "dotenv": "^16.4.7",
    "commander": "^12.1.0",
    "websocket-polyfill": "^0.0.3",
    "concurrently": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.13.1",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.7.3",
    "tsx": "^4.19.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.14"
  }
}